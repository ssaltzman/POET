.allIdeas {
    padding-top:10px;
    clear: both;
}

.idea {
    border: 1px solid #3399FF;
    padding: 5px;
    margin: 0 0 10px;
    width:auto;
}

.ui-icon {
    display: inline-block !important;
}

.ideaTable {
    width: 100%;
}


.ideaListOpen {
    list-style-type: none;
    padding: 0px;
}

.ideaListClose {
    list-style-type: inherit;
}

.itemImage {
    border: 2px solid darkblue;
    padding: 2px;
    width: 75px;
    height: 75px;
    text-align: center;
    display: inline-block;
}

.itemElements {
    display:inline-block;
    vertical-align: middle;
}

.author {
    color: red;
    font-size: 11;
}

.ideaTime {
    font-size: 11;
    font-style: italic;
    color: #bbb;
}

.updatedTime {
    color: red;
}

.openlink {
    background: url("/static/admin/img/admin/icon_addlink.gif") no-repeat scroll 0 0.2em transparent;
    padding-left: 17px;
}

.closelink {
    background: url("/static/admin/img/admin/icon-no.gif") no-repeat scroll 0 0.2em transparent;
    padding-left: 17px;
}

.editlink {
    background: url("/static/admin/img/admin/icon_changelink.gif") no-repeat scroll 0 0.2em transparent;
    padding-left: 15px;
}

.submitted-by-current-user{
    color: #999;
	font-weight: bold;
    //text-shadow: 1px -1px 1px #888888;
}

.not-submitted-by-current-user{

}

.itemImage{
	height: auto;
	width: auto;
}

.adminName{
	font-weight: bold;
}