div#voteContainer{
	width: 700px;
	overflow: auto;
}

#voteForSpan {
	float: right;
}

#voteAgainstSpan {
	float: left;
}

.voteList {
	list-style-type: none; 
	margin: 0px 10px 0px 0px; 
	padding: 5px 0px 4px 0px; 
	width: 322px;
	min-height: 50px;
	
}

.voteList li{
	margin: 0px 5px 5px 5px; 
	padding: 5px; 
	font-size: 1.2em; 
	width: 120px;
}


ol#votedfor_sort{
}

ol#notvotedfor_sort{
	background: #ddd;

}

ol#placeholder_list{
	background: #ddd;
}

.listHeader{
	width: 322px;
	margin: 0px;
	font-size: 1.5em;
	font-weight: bold;
	text-align: center;
}